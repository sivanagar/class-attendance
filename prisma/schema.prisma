datasource db {
    provider = "mysql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

///------------------------------------
/// User Model (Teachers and Admins)
///------------------------------------
model User {
    id        Int      @id @default(autoincrement())
    email     String   @unique
    password  String
    name      String
    classes   Class[]  
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    
}




